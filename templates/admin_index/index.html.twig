{% extends 'base.html.twig' %}

{% block title %} Hello Admin ! {% endblock %}

{% block stylesheets %} 
    <style>
        body {
            background: #ddd;
        } 
    </style>
{% endblock %}

{% block body %}
<div class="container" style>
    <section class="tab-pane fade show active row mt-5" role="tabpanel" aria-labelledby="donnees_principales-tab">
        <div class="col-md-12">
            <div id="infos" class="row">
                <div class="col-md-12 card mb-5" style="box-shadow: 2px 2px 12px gray; border-radius: 20px;">
                     <h1 style="text-align:center; color:#2c3e50" class="mt-4 mb-4"> Bonjour {{ app.user.prenom }} ! </h1>
                </div>

                <div class="col-md-12 card" style="box-shadow: 2px 2px 12px gray; border-radius: 20px;">
                        
                    <h2 style="text-align:center; color:#2c3e50" class="mt-5">Quelle action souhaitez-vous effectuer ?</h2>
                        
                    <h4 style="text-align:center" class="mt-4">
                        <a class="dropdown-item" href="{{ path('admin_conge_index') }}"> Gérer les demandes de congé ! </a>
                    </h4>
                    
                    <h4 style="text-align:center">
                        <a class="dropdown-item" href="{{ path('admin_permission_index') }}"> Gérer les demandes de permission ! </a>
                    </h4>

                    <h4 style="text-align:center">
                        <a class="dropdown-item" href="{{ path('admin_absence_index') }}"> Voir les absences ! </a>
                    </h4>

                    <h4 style="text-align:center" class="mt-4 mb-5">
                        <a class="dropdown-item" href="{{ path('admin_utilisateur_index') }}"> Gérer les utilisateurs ! </a>
                    </h4>
                </div>
            </div>
        </div>
</div>
{% endblock %}
