{% extends 'base.html.twig' %}

{% block title %}Absence{% endblock %}

{% block body %}
    <div class="mt-4 mb-4">
        <h1>Absence</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ absence.id }}</td>
                </tr>
                <tr>
                    <th>Date_debut</th>
                    <td>{{ absence.dateDebut ? absence.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Date_fin</th>
                    <td>{{ absence.dateFin ? absence.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Motif</th>
                    <td>{{ absence.motif }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ absence.createdAt ? absence.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <p style="text-align:center;">
            {% if absence.filename %}
                <img src="/images/piecesJointes/{{ absence.filename}}" alt="" style="width:72%;">
            {% endif %}
        </p>

        <a href="{{ path('moderator_absence_index') }}">back to list</a>

        <a href="{{ path('moderator_absence_edit', {'id': absence.id}) }}">edit</a>

        {#{ include('absence/_delete_form.html.twig') }#}
    </div>
{% endblock %}
