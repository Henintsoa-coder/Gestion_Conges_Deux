{% extends 'base.html.twig' %}

{% block title %}Conge{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Conge</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ conge.id }}</td>
                        </tr>
                        <tr>
                            <th>Date_debut</th>
                            <td>{{ conge.dateDebut ? conge.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date_fin</th>
                            <td>{{ conge.dateFin ? conge.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Motif</th>
                            <td>{{ conge.motif }}</td>
                        </tr>
                        <tr>
                            <th>Etat</th>
                            <td>{{ conge.etat ? 'Validé' : 'Non-validé' }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ conge.createdAt ? conge.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <a href="{{ path('conge_index') }}" class="btn btn-primary">back to list</a>

                <a href="{{ path('conge_edit', {'id': conge.id}) }}" class="btn btn-warning" style="color:white">Modifier</a>
                <a href="" class="btn btn-info">Imprimer</a>
            </div>
            
        </div>
        <div class="row">
            <div class="col mt-2">
                {{ include('conge/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
